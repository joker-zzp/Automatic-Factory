root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py, tsx, html, json}]
charset = utf-8

[*.py]
indent_size = 4
indent_style = space

[*.{json, yaml}]
indent_size = 2
indent_style = space

[*.{tsx, ts, js, html, css}]
indent_size = 2
indent_style = space
